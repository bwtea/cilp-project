<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="CIPL.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="CIPL Excel Filter">

    <Grid Width="400" Height="250">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="15" >
            <Button Content="Open Excel File" Click="OpenFile_Click"/>
            <Button Content="Filter and Save" Click="FilterAndSave_Click"/>
            <Button Content="Merge Multiple Exel Files" Click="MergeFinalTables_Click"/>
            <Button Content="Attach to Final Template" Click="AttachToTemplate_Click"/>
            <TextBlock x:Name="StatusText" Text="Status: Ready" FontWeight="Bold" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>

